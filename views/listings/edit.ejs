<% layout('layouts/boilerplate')%>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title:</label><br />
            <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks good</div>
        </div>
      
      
        <div class="mb-3">
            <label for="description" class="form-label">Description:</label><br />
            <textarea id="description" name="listing[description]" class="form-control" required><%= listing.description %></textarea>
            <div class="invalid-feedback">Please enter short description</div>
        </div>
      
        <!-- <div class="mb-3">
          <img src="<%= listing.image.url%>"/>
        </div> -->
     
        <div class="mb-3">
          Original Listing Image</br>
  <img 
    src="<%= originalImageUrl.replace('/upload', '/upload/w_200,h_150,c_limit') %>" 
    class="img-fluid rounded" 
    alt="Listing Image"
  />
</div>

       <div class="mb-3">
        <label for="image" class="form-label" >Upload new Image URL:</label><br />
      <input
        id="image"
        name="listing[image]"
        
        type="file"
        class="form-control"
       
      />
      
       </div>
      
      

      <!-- Image Preview -->
      <!-- <img
        id="imagePreview"
        src="<%= listing.image?.url || 'https://via.placeholder.com/300x200?text=No+Image' %>"
        alt="Listing Image"
      /> -->
     
      <div class="row ">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price:</label><br />
          <input id="price" name="listing[price]" value="<%= listing.price %>" type="number" class="form-control" required/>
          <div class="invalid-feedback">Please enter valid price</div>
           </div>
          
          <br />
           <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label><br />
          <input id="country" name="listing[country]" value="<%= listing.country %>" type="text" class="form-control" required/>
          <div class="invalid-feedback">Please enter country name</div>
           </div>
      </div>
       
      
      
       <div class="mb-3">
        <label for="location" class="form-label">Location:</label><br />
      <input id="location" name="listing[location]" value="<%= listing.location %>" type="text" class="form-control" required/>
      <div class="invalid-feedback">Please enter location</div>
       </div>
      
      <br /><br />

      <button class="btn btn-dark edit-btn mt-2 mb-4 add-btn">Edit</button>
      <br />
    </form>
    
    <!-- Optional: Live preview update -->
    <script>
      const imageInput = document.getElementById('image');
      const preview = document.getElementById('imagePreview');
      imageInput.addEventListener('input', () => {
        preview.src = imageInput.value || 'https://via.placeholder.com/300x200?text=No+Image';
      });
    </script>

  </div>
</div>
